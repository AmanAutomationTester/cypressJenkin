pipeline
{
    agent any
    options {
        ansiColor('xterm')
    }
    stages
    {
        stage('Cleanup')
        {
            steps {
                dir ('bin') {
                    deleteDir()
                }
            }
        }
        stage('Build')
        {
            steps
            {
                bat "npm install"
                bat "exit 0"
            }
        }
        
        stage ('Test')
        {
            steps
            {
                catchError (buildResult: 'SUCCESS', stageResult: 'FAILURE')
                {
                    echo 'Executing spec file in Cypress'
                    bat "npm test"
                    bat "exit 0"
                }
            }
        }
        stage ('Read failures tests and store into CSV')
        {
            steps
            {
                script {
                    def files = findFiles(glob: '**/logs/*.json')
                    def list = []
                    files.each {
                        name -> def props = readJSON file: "${name}"                                             
                        list.add(props.title);
                    }                      
                    writeCSV file: 'fail.csv', records: list, format: CSVFormat.DEFAULT.withRecordSeparator(';'); 
                    bat "exit 0"
                }
            }
        }
    }
    post {
        always {
            publishHTML(target: [
                allowMissing: false, 
                alwaysLinkToLastBuild: false, 
                keepAll: true, 
                reportDir: 'cypress/reports/mochawesome-report', 
                reportFiles: 'index.html', 
                reportName: 'Cypress Report', 
                charts: true, 
                embeddedScreenshots: true,
            ])
        }
    }
}
