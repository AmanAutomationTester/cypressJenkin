pipeline
{
    agent any

    stages
    {
        stage('Build')
        {
            steps
            {
                bat "npm install"
            }
        }
        stage ('Test')
        {
            steps
            {
                echo 'Executing spec file in Cypress'
                bat "npm test"
            }
        }
        stage ('Read failures json')
        {
            steps
            {
           def fileList = bat (script: 'ls /cypress/logs/*.json', returnStdout: true).trim().split("\n")
           echo fileList
            }
        }
    }
}