pipeline
{
    agent any
    options {
        ansiColor('xterm')
    }
    stages
    {
        stage('Cleanup')
        {
            steps {
                dir ('cypress/logs') {
                    deleteDir()
                    echo "Deleting all files present under logs directory"
                }
            }
        }
        stage('Build')
        {
            steps
            {
                echo "Exectuing Build Stage"
                // bat "npm install"              
            }
        }
        
        stage ('Test')
        {
            steps
            {
                catchError (buildResult: 'SUCCESS', stageResult: 'FAILURE')
                {
                    echo 'Executing spec file in Cypress'
                    bat "npm test"                   
                }
            }
        }
        stage ('Save failures test details')
        {
            steps
            {
                script {
                    def files = findFiles(glob: '**/logs/*.json')
                    def list = []
                    files.each {
                        name -> def props = readJSON file: "${name}"                                             
                        list.add(props.title);
                    }                      
                    writeCSV file: 'fail.csv', records: list, format: CSVFormat.DEFAULT.withRecordSeparator(';');                     
                }
            }
        }
    }
    post {
        always {
            publishHTML(target: [
                allowMissing: false, 
                alwaysLinkToLastBuild: false, 
                keepAll: true, 
                reportDir: 'cypress/reports/mochawesome-report', 
                reportFiles: 'index.html', 
                reportName: 'Cypress Report', 
                charts: true, 
                embeddedScreenshots: true,
            ])
        }
    }
}
