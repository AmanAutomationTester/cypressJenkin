pipeline
{
    agent any

    stages
    {
        stage('Build')
        {
            steps
            {
                bat "npm install"
            }
        }
        stage ('Test')
        {
            steps
            {
                echo 'Executing spec file in Cypress'
                bat "npm test"
            }
        }
        stage ('Read failures json')
        {
            steps
            {
                import groovy.json.JsonSlurper
                def directoryPath = 'logs'
                def directory = new File(directoryPath)


                directory.eachFileMatch(~ /.*\.json/) {
                    file -> def json = new JsonSlurper().parseText(file.text)
                    ecso json;
                }
            }
        }
    }
}