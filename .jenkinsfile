        stage ('Read failures json')
        {
            steps
            {
                script {
                    def files = findFiles(glob: '**/logs/*.json')
                    def list = []
                    files.each {
                        name -> def props = readJSON file: "${name}"                                             
                        list.add(props.title);
                    }   
                    echo "aman singhal ${list}"
                    writeCSV file: 'fail.csv', records: list, format: CSVFormat.DEFAULT;
                }
            }
        }
    }
