pipeline
{
    agent any
    options {
        ansiColor('xterm')
    }
    stages
    {
        stage('Build')
        {
            steps
            {
                bat "npm install"
            }
        }       
        stage ('Rerun failed tests')
        {
            steps
            {
                script {
                    def records = readCSV file: 'C:/Users/sjain/.jenkins/workspace/cypressJob/fail.csv', skipFirstLine: true                                
                    def testcases = records.values.flatten()
                    def myString = testcases.join(',').replaceAll(/(;)\s*$/, '')               
                    bat "npx cypress run --env grep=${myString}"
                }
            }
        }
    }
    post {
        always {
            publishHTML(target: [
                allowMissing: false, 
                alwaysLinkToLastBuild: false, 
                keepAll: true, 
                reportDir: 'cypress/reports/mochawesome-report', 
                reportFiles: 'index.html', 
                reportName: 'Re-Run Report'
            ])
        }
    }
}
