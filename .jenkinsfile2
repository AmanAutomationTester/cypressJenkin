pipeline
{
    agent any

    stages
    {
        stage('Build')
        {
            steps
            {
                bat "npm install"
                bat "exit 0"
            }
        }       
        stage ('Rerun failed tests')
        {
            steps
            {
                script {
                     def records = readCSV file: 'C:/Users/amsinghal/.jenkins/workspace/cypressJob/fail.csv', skipFirstLine: true                                
                     def testcases = records.values.flatten()
                     def myString = testcases.join(',').replaceAll(/(;)\s*$/, '')               
                     bat "npx cypress run --env grep=${myString}"          
                     bat "exit 0"
                }
            }
        }
    }
    post {
        always {
            publishHTML(target: [
                allowMissing: false, 
                alwaysLinkToLastBuild: false, 
                keepAll: true, 
                reportDir: 'cypress/reports/mochawesome-report', 
                reportFiles: 'index.html', 
                reportName: 'Re-Run Report'
            ])
        }
    }
}
